- content_for :title, 'Roles'

%h1 Listing roles

%table.table
  %thead
    %tr
      %th{ width: '10%' } #
      %th{ width: '20%' } Name
      %th{ width: '40%' } Description
      %th{ width: '15%' } Published
      %th{ width: '5%' }
      %th{ width: '5%' }
      %th{ width: '5%' }

  %tbody
    - @roles.each do |role|
      %tr
        %td= role.id
        %td= role.name
        %td= role.description
        %td= role.published ? 'Yes' : 'No'
        %td= link_to 'Show', role
        %td= link_to 'Edit', edit_role_path(role)
        %td= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Role', new_role_path
